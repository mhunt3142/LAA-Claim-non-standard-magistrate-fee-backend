<% title t('.page_title') %>
<% step_header(path: applications_path) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= govuk_error_summary(@form_object) %>
    <%= step_form @form_object do |f| %>
        <%= f.govuk_radio_buttons_fieldset :claim_type, legend: { tag: 'h1', size: 'xl' } do %>
          <% @form_object.choices.each do |choice| %>
            <% if choice == ClaimType::NON_STANDARD_MAGISTRATE %>
              <%= f.govuk_radio_button :claim_type, choice.value do %>
                <%= f.govuk_date_field :rep_order_date, maxlength_enabled: true %>
              <% end %>
            <% elsif choice == ClaimType::BREACH_OF_INJUNCTION %>
              <%= f.govuk_radio_button :claim_type, choice.value do %>
                <%= f.govuk_text_field :cntp_order, width: 'one-third', autocomplete: 'off' %>
                <%= f.govuk_date_field :cntp_date, maxlength_enabled: true %>
              <% end %>
            <% else %>
              <%= f.govuk_radio_button :claim_type, choice.value  do %>
                <p><%= t('.other_details.line_1') %></p>
                <p><%= t('.other_details.line_2') %></p>
                <p><%= t('.other_details.line_3') %></p>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
        <%= f.continue_button(secondary: false) %>
    <% end %>
  </div>
</div>


